.plans
	display block
	margin-top 3.2rem
	&__descr
		page-text()
		margin-top .6rem
.plans-block
	margin-top 0.8rem
	&__elem
		display inline-block
		font-family 'PT Sans', sans-serif
		font-size 1.3rem
		line-height 1.6rem
		padding-left 2.5rem
		margin-right .6rem
		position relative
		font-weight 700
		color #000
		&:first-child
			padding-left 2rem
			&::before
				content ''
				background-image url('/images/radio.png')
				background-size cover
				background-repeat no-repeat
				background-position center
				width 2.5rem
				height 2rem
				position absolute
				top -3px
				left -6px
